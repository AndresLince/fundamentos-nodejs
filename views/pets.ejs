<%- include('template/header', { pageTitle: 'Pagina de mascotas' }) %>

    <body>
        <div class="container">
            <h1>
                <%= titulo %>
            </h1>
            <a class="btn btn-success btn-block my-2" href="pets/create">
                Crear nueva mascota
            </a>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Acci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (pets.length> 0) { %>
                        <% pets.forEach(element => { %>
                            <tr>
                                <th scope="row"><%= element.id %></th>
                                <td><%= element.name %></td>
                                <td><%= element.description %></td>
                                <td>
                                    <a class="btn btn-warning" href="/pets/<%= element.id %>">
                                        Editar
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                                <% } %>
                </tbody>
            </table>
        </div>
<%- include('template/footer') %>